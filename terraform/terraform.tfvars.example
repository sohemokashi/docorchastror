# Example terraform.tfvars file
# Copy this to terraform.tfvars and customize as needed

aws_region   = "us-east-1"
project_name = "task-generator"
environment  = "dev"

# Lambda configuration
lambda_runtime     = "nodejs20.x"
lambda_timeout     = 30
lambda_memory_size = 512

# Bedrock model
# Available models:
# - anthropic.claude-3-sonnet-20240229-v1:0 (recommended)
# - anthropic.claude-3-haiku-20240307-v1:0 (faster, cheaper)
# - anthropic.claude-3-opus-20240229-v1:0 (most capable, expensive)
bedrock_model_id = "anthropic.claude-3-sonnet-20240229-v1:0"

# CORS configuration
# Use ["*"] for development, restrict for production
cors_allowed_origins = ["*"]
# cors_allowed_origins = ["https://yourdomain.com"]

# API Gateway
api_gateway_stage_name = "v1"
